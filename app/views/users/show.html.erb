<% else %>
  <div class="profile">
    <br><br><br><br><br><br><br>
        <div class="profile-p-home" style="font-size:20px; color:black">Hello! My name is</div><br><br>
    <h6 style="font-family: 'ProximaNova-Light';
      font-size: 3.7em;
      text-align: center;
      color: #373738;
      margin: -.1em 0 1em;
      font-weight: 700;"><%=@user.name%></h6>
    
    <div class="row">
      <div class="four columns"></div>
      <div class="four columns">
        <div class="home-circle" style="background:#999 url(<%=@user.avatar.profile.url %>) 80% 0%; background-repeat:no-repeat"></div>
      </div>
      <div class="four columns"></div>
    </div>
    <div class="profile-p">
      You will be sending an email to <%=@user.name %> with your email address. <%=@user.name %> will contact you as soon as possible via email to set up a time to chat. Are you sure you want to send this email?
    </div>
    <br><br><br><br>
    <div class="row">
      <div class="three columns"></div>
      <div class="two columns">
        <div style="text-align: right">
          <%= link_to "Yes", mentor_mailing_chat_path, {style: 'width:500px; height:50px; font-size:25px; text-align:center', class: "button-splash"}%>
        </div>
      </div>
      <div class="two columns"></div>
      <div class="two columns">
        <div style="text-align: left">
          <%= link_to "No", profile_path(:confirmation => false), {style: 'width:200px; height:50px; font-size:25px; text-align:center', class: "button-splash"}%>
        </div>
      </div>
      <div class="three columns"></div>
    </div>
    <br><br><br><br><br><br><br><br>
  </div>
<% end %>
